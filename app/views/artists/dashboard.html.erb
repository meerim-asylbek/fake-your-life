<div class="container mt-5 pt-1">
  <div class="row gutters-sm">
    <div class="col-md-6 mb-3">
      <div class="p-2 mb-3">
        <h1 class="fw-bold display-1"><%= @artist.name %></h1>
        <div class="d-flex">
          •
        <small class="mx-3">Category: <%= @artist.category %></small>
          •
        <small class="mx-3">Address: <%= @artist.address %></small>
        </div>
      </div>
      <div class="glide rounded mb-4">
        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">
            <li class="glide__slide"><%= cl_image_tag @artist.photos[0].key, height: 350, width: 500, crop: :fill %></li>
            <li class="glide__slide"><%= cl_image_tag @artist.photos[1].key, height: 350, width: 500, crop: :fill %></li>
            <li class="glide__slide"><%= cl_image_tag @artist.photos[2].key, height: 350, width: 500, crop: :fill %></li>
          </ul>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
          <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
          <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
        </div>
      </div>
    </div>
    <div class="col-md-6 mt-5">
      <% hires = Hire.where(artist_id: current_user.id ) %>
      <div class="row">
        <h2 class="mb-0">Hires</h2>
      </div>
      
      <div class="row">
        <% if hires.empty? %>
          <small><em class="text-muted">You haven't been hired yet</em></small>
        <% end %>
        <% hires.each do |hire| %>
          <div class="mt-3">
            <p class="mb-0"><%= link_to hire.customer.first_name, customer_path(hire.customer) %></p>
            <p class="mb-0"><%= hire.start_date %></p>
            <p class="mb-0"><%= hire.end_date %></p>
            <p class="mb-0"><%= hire.total_price %></p>
          </div>
          <hr>
        <% end %>
      </div>
      <hr>

      <% reviews = Review.where(artist_id: current_user.id ) %>
      <div class="row">
        <h4 class="mb-0">My reviews</h4>
      </div>

      <div class="row">
        <% if reviews.empty? %>
          <small><em class="text-muted">You haven't been reviewed yet</em></small>
        <% end %>
        <% reviews.each do |review| %>
          <div class="mt-3">
            <p class="mb-0"><%= link_to review.customer.first_name, customer_path(review.customer) %></p>
            <% review.rating.times do %>
              <i class="fa-solid fa-star"></i>
            <% end %>
            <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
            <p class="mb-2"><%= review.comment %></p>
            <hr>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
