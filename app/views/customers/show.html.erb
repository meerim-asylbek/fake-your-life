
<div class="container">
  <div class="main-body">
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="neu-form mt-5">
          <div class="d-flex flex-column align-items-center text-center">
            <%= cl_image_tag @customer.avatar.key, height: 300, width: 300, crop: :fill %>
            <div class="mt-3">
              <h2 class="fw-bold py-3"><%= @customer.first_name %> <%= @customer.last_name %></h2>
              <p><%= @customer.age %> years old</p>
              <p><%= @customer.address %></p>
              <%= link_to "Edit my profile", edit_customer_path(@customer), class: "btn btn btn-outline-success my-3" %>
            </div>
          </div>
        </div>
      </div>
    <div class="col-md-8 mt-5">
    <% reviews = Review.where(artist_id: current_user.id ) %>
      <div class="row gy-5">
        <div class="col-sm-3">
          <h4 class="mb-0">Reviews</h4>
        </div>
        <div class="col-sm-9 text-secondary">
          <% if reviews.empty? %>
            <small><em class="text-muted">You haven't been reviewed yet</em></small>
          <% end %>
          <% reviews.each do |review| %>
            <div class="mb-3">
              <p class="mb-0"><%= link_to review.customer.first_name, customer_path(review.customer) %></p>
              <% review.rating.times do %>
                <i class="fa-solid fa-star"></i>
              <% end %>
              <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
              <p class="mb-0"><%= review.comment %></p>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row gy-5">
        <div class="col-sm-3">
          <h4 class="mb-0">Reviews by me</h4>
        </div>
        <div class="col-sm-9 text-secondary">
          <% if @customer.reviews.empty? %>
            <small><em class="text-muted">You didn't write any reviews yet</em></small>
          <% end %>
          <% @customer.reviews.each do |review| %>
            <div class="mb-3">
              <p class="mb-0"><%= link_to review.artist.name, artist_path(review.artist) %></p>
              <% review.rating.times do %>
                <i class="fa-solid fa-star"></i>
              <% end %>
              <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
              <p class="mb-0"><%= review.comment %></p>
            </div>
          <% end %>
        </div>
      </div>
      <hr>
      <div class="row gy-5">
        <div class="col-sm-3">
          <h4 class="mb-0">Hires</h4>
        </div>
        <div class="col-sm-9 text-secondary">
          list of hires
        </div>
      </div>
    </div>
  </div>
</div>
